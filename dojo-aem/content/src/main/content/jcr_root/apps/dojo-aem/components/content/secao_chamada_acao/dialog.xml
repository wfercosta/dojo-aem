<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <geral
                jcr:primaryType="cq:Panel"
                title="Geral">
                <items jcr:primaryType="cq:WidgetCollection">
                    <chamada
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Texto chamada"
                        name="./chamada"
                        xtype="textfield"/>
                    <btn_rotulo
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Botão rótulo"
                        name="./rotulo"
                        xtype="textfield"/>
                    <btn_link
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Ligação"
                        name="./link"
                        xtype="textfield"/>
                    <btn_link_tipo
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Tipo ligação"
                        name="./nova"
                        type="checkbox"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <nova_janela
                                jcr:primaryType="nt:unstructured"
                                text="Nova janela"
                                value="true"/>
                        </options>
                    </btn_link_tipo>
                </items>
            </geral>
        </items>
    </items>
</jcr:root>
